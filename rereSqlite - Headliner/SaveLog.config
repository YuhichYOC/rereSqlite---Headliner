<?xml version="1.0" encoding="utf-8" ?>
<configuration>

    <configSections>
        <section name="log4net" type=" log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
    </configSections>

    <log4net>

        <appender name="ErrorLog"
                  type="log4net.Appender.FileAppender">
            <param name="File" value="Error.log" />
            <param name="AppendToFile" value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <param name="ConversionPattern"
                       value="%d %-5p - %m%n" />
            </layout>
        </appender>

        <appender name="WarnLog"
                  type="log4net.Appender.FileAppender">
            <param name="File" value="Warn.log" />
            <param name="AppendToFile" value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <param name="ConversionPattern"
                       value="%d %-5p - %m%n" />
            </layout>
        </appender>

        <appender name="InfoLog"
                  type="log4net.Appender.FileAppender">
            <param name="File" value="Info.log" />
            <param name="AppendToFile" value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <param name="ConversionPattern"
                       value="%d %-5p - %m%n" />
            </layout>
        </appender>

        <appender name="LogOperatorLog"
                  type="log4net.Appender.FileAppender">
            <param name="File" value="LogOperator.log" />
            <param name="AppendToFile" value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <param name="ConversionPattern"
                       value="%d %-5p - %m%n" />
            </layout>
        </appender>

        <appender name="LogFileAppender"
                  type="log4net.Appender.FileAppender">
            <param name="File" value="SaveAll.txt" />
            <param name="AppendToFile" value="true" />
            <filter type="log4net.Filter.LevelRangeFilter">
                <param name="LevelMin" value="FATAL" />
                <param name="LevelMax" value="FATAL" />
            </filter>
            <layout type="log4net.Layout.PatternLayout">
                <param name="ConversionPattern"
                       value="%d %-5p - %m%n" />
            </layout>
        </appender>

        <category name="ErrorLog">
            <priority value="ALL" />
            <appender-ref ref="ErrorLog" />
        </category>

        <category name="WarnLog">
            <priority value="ALL" />
            <appender-ref ref="WarnLog" />
        </category>

        <category name="InfoLog">
            <priority value="ALL" />
            <appender-ref ref="InfoLog" />
        </category>

        <category name="LogOperatorLog">
            <priority value="ALL" />
            <appender-ref ref="LogOperatorLog" />
        </category>

        <root>
            <priority value="FATAL" />
            <appender-ref ref="LogFileAppender" />
        </root>
    </log4net>
</configuration>
